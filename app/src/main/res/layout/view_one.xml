<?xml version="1.0" encoding="utf-8"?>
<com.sls.superlight.slates.viewone.ViewOne xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:orientation="vertical"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:id="@+id/root">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is View One!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/arg_text"
        android:hint="Data to persist"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="GOTO VIEW TWO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go_to_button"
        android:layout_below="@+id/arg_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"/>

        <Switch
            android:text="Switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/go_to_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:id="@+id/switch1"/>


    </RelativeLayout>

</com.sls.superlight.slates.viewone.ViewOne>